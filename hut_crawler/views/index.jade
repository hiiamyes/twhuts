doctype html
html(ng-app='hutCrawler')
	head
		title 台灣山屋餘額查詢

		//- angular
		//- script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
		script(src='../bower_components/angular/angular.js')
		script(src='../bower_components/angular-route/angular-route.js')
		script(src='scripts/angular/controller.js')

		//- css
		link(rel='stylesheet', href='compass/css/index.css')

		//- loaders.css
		link(rel='stylesheet', href='../bower_components/loaders.css/loaders.min.css')

	body(ng-controller='hutCrawlerCtrl')

		#container
			#background
				#cover
			
			//- Design Ref: http://codepen.io/iremlopsum/pen/OVMxzp?editors=110
			#content

				#titlebar
					a(
						ng-repeat='title in titleBar' 
						href='{{title.url}}' 
						ng-class='{selected: title.name == titleBarNameSelected}'
						ng-click='titleBarNameClicked(title.name)'
					) {{title.name}}
					
				div(ng-view)
						

